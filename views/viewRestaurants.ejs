<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View Restaurants</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>
<body class="bg-gray-100">

  <nav class="bg-blue-600 p-4">
    <div class="container mx-auto flex justify-between items-center">
      <a href="/" class="text-white text-2xl font-bold">Restaurant Management</a>
      <a href="/add-restaurant" class="text-white">Add Restaurant</a>
    </div>
  </nav>

  <div class="container mx-auto my-8">
    <h1 class="text-3xl font-bold mb-6">Restaurant List</h1>

    <% if (restaurants && restaurants.length > 0) { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% restaurants.forEach(restaurant => { %>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-semibold text-blue-600"><%= restaurant.name %></h2>
            <p><strong>Ratings:</strong> <%= restaurant.ratings %></p>
            <p><strong>Cuisine:</strong> <%= restaurant.cuisine %></p>
            <p><strong>Address:</strong> <%= restaurant.address %></p>
            <p><strong>Phone:</strong> <%= restaurant.phone %></p>
            <p><strong>Food:</strong> <%= restaurant.food.join(', ') %></p>
            <p><strong>Ambience:</strong> <%= restaurant.ambience.join(', ') %></p>
            <p><strong>Date and Time:</strong> <%= new Date(restaurant.dateAndTime).toLocaleString() %></p>
            <p><strong>Price:</strong> <%= restaurant.price %></p>
            <a href="/restaurants/<%= restaurant._id %>" class="text-blue-600 hover:underline mt-4 inline-block">View Details</a>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-center text-gray-500">No restaurants found.</p>
    <% } %>
  </div>

</body>
</html>
